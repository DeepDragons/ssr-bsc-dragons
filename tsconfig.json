{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "app/*": ["src/*"],
      "types/*": ["types/*"],
    },
    "resolveJsonModule": true,
    "baseUrl": ".",
    "isolatedModules": false
  }
}